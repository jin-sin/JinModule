<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- ProgressBar -->
    <style name="ProgressBarCircular" parent="AppTheme">
        <item name="android:indeterminateDrawable">@drawable/progressbar_bg</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>

    <!-- Button -->
    <style name="BtnCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BtnImageBased" parent="BtnCommon">
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="BtnTextBased" parent="BtnCommon">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>
